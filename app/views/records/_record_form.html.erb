<%= form_for @record do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  
  <div class="field">
    <%= f.label :species %><br />
    <%= f.text_area :species, :rows => 1 %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_area :location, :rows => 1 %>
  </div>
  <div class="field">
    <%= f.label :grid_ref %><br />
    <%= f.text_area :grid_ref,  :rows => 1%>
  </div>
  <div class="field">
    <%= f.label :comments %><br />
    <%= f.text_area :comments, :rows => 6 %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>